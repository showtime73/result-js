{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"strict": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "lib/",
		"declaration": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "lib", "docs"],
	"compileOnSave": true
}
